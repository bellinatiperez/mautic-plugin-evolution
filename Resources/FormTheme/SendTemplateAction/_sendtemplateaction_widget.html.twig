{% block evolution_send_template_action_widget %}
    <div class="evolution-send-template-widget">
        <div class="form-group">
            {{ form_label(form.group_alias) }}
            {{ form_widget(form.group_alias, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.group_alias) }}
            {% if form.group_alias.vars.attr['data-groups-error'] == '1' %}
                <div class="alert alert-danger" role="alert" style="margin-top:8px;">
                    {{ 'mautic.evolution.campaign.action.group.load_error'|trans }}
                </div>
            {% elseif form.group_alias.vars.choices is empty %}
                <div class="alert alert-warning" role="alert" style="margin-top:8px;">
                    {{ 'mautic.evolution.campaign.action.group.no_enabled'|trans }}
                </div>
            {% endif %}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    {{ 'mautic.evolution.campaign.action.group.help'|trans }}
                </small>
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.template) }}
            {{ form_widget(form.template, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.template) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    Selecione um template ativo para enviar ao lead.
                </small>
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.phone_field) }}
            {{ form_widget(form.phone_field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone_field) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    Selecione qual campo do lead será usado para obter o número do WhatsApp.
                </small>
            </div>
        </div>

        {# Headers (SortableListType) #}
        <div class="form-group">
            {{ form_row(form.headers) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    {{ 'mautic.evolution.campaign.action.headers.help'|trans }}
                </small>
            </div>
        </div>

        {# Data (SortableListType) #}
        <div class="form-group">
            {{ form_row(form.data) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    {{ 'mautic.evolution.campaign.action.data.help'|trans }}
                </small>
            </div>
        </div>
    </div>
{% endblock %}