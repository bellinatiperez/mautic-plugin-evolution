{% extends '@MauticCore/Default/content.html.twig' %}

{% block headerTitle %}{{ 'mautic.evolution.template.header'|trans }}{% endblock %}

{% block mauticContent %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            <i class="fa fa-whatsapp"></i>
            {{ 'mautic.evolution.template.header'|trans }}
        </div>
        <div class="panel-toolbar">
            <div class="btn-group">
                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'new'}) }}" 
                   class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i>
                    {{ 'mautic.evolution.template.new'|trans }}
                </a>
            </div>
        </div>
    </div>
    
    <div class="panel-body">
        {% if items|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="col-template-name">
                                {{ 'mautic.evolution.template.name'|trans }}
                            </th>
                            <th class="col-template-type">
                                {{ 'mautic.evolution.template.type'|trans }}
                            </th>
                            <th class="col-template-status">
                                {{ 'mautic.evolution.template.status'|trans }}
                            </th>
                            <th class="col-template-created">
                                {{ 'mautic.core.date.created'|trans }}
                            </th>
                            <th class="col-template-actions">
                                {{ 'mautic.core.actions'|trans }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>
                                    <div>
                                        <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'view', 'objectId': item.id}) }}">
                                            {{ item.name }}
                                        </a>
                                    </div>
                                    {% if item.description %}
                                        <div class="text-muted small">{{ item.description }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="label label-{{ item.type == 'text' ? 'info' : (item.type == 'media' ? 'warning' : 'success') }}">
                                        {{ ('mautic.evolution.template.type.' ~ item.type)|trans }}
                                    </span>
                                </td>
                                <td>
                                    {% if item.isActive %}
                                        <span class="label label-success">
                                            <i class="fa fa-check"></i>
                                            {{ 'mautic.evolution.template.active'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="label label-default">
                                            <i class="fa fa-times"></i>
                                            {{ 'mautic.evolution.template.inactive'|trans }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <abbr title="{{ item.dateAdded|date('Y-m-d H:i:s') }}">
                                        {{ item.dateAdded|date('d/m/Y') }}
                                    </abbr>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa fa-cog"></i>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li>
                                                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'view', 'objectId': item.id}) }}">
                                                    <i class="fa fa-eye"></i>
                                                    {{ 'mautic.core.form.view'|trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'edit', 'objectId': item.id}) }}">
                                                    <i class="fa fa-pencil"></i>
                                                    {{ 'mautic.core.form.edit'|trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'clone', 'objectId': item.id}) }}">
                                                    <i class="fa fa-copy"></i>
                                                    {{ 'mautic.core.form.clone'|trans }}
                                                </a>
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'preview', 'objectId': item.id}) }}" 
                                                   target="_blank">
                                                    <i class="fa fa-search"></i>
                                                    {{ 'mautic.evolution.template.preview'|trans }}
                                                </a>
                                            </li>
                                            <li class="divider"></li>
                                            {% if item.isActive %}
                                                <li>
                                                    <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'toggle', 'objectId': item.id}) }}">
                                                        <i class="fa fa-toggle-off"></i>
                                                        {{ 'mautic.evolution.template.deactivate'|trans }}
                                                    </a>
                                                </li>
                                            {% else %}
                                                <li>
                                                    <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'toggle', 'objectId': item.id}) }}">
                                                        <i class="fa fa-toggle-on"></i>
                                                        {{ 'mautic.evolution.template.activate'|trans }}
                                                    </a>
                                                </li>
                                            {% endif %}
                                            <li class="divider"></li>
                                            <li>
                                                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'delete', 'objectId': item.id}) }}" 
                                                   onclick="return confirm('{{ 'mautic.evolution.template.delete.confirm'|trans }}')">
                                                    <i class="fa fa-trash text-danger"></i>
                                                    {{ 'mautic.core.form.delete'|trans }}
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if pagination is defined %}
                {{ include('@MauticCore/Helper/pagination.html.twig', {'pagination': pagination}) }}
            {% endif %}
        {% else %}
            <div class="alert alert-info text-center">
                <h4>
                    <i class="fa fa-info-circle"></i>
                    {{ 'mautic.evolution.template.empty.title'|trans }}
                </h4>
                <p>{{ 'mautic.evolution.template.empty.description'|trans }}</p>
                <a href="{{ path('mautic_evolution_template_action', {'objectAction': 'new'}) }}" 
                   class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                    {{ 'mautic.evolution.template.create_first'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}