{% block evolution_send_message_action_widget %}
    <div class="evolution-send-message-widget">
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'Digite sua mensagem aqui...'}}) }}
            {{ form_errors(form.message) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    Você pode usar tokens como {firstname}, {lastname}, {email}, etc.
                </small>
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.phone_field) }}
            {{ form_widget(form.phone_field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone_field) }}
            <div class="help-block">
                <small>
                    <i class="fa fa-info-circle"></i>
                    Selecione qual campo do lead será usado para obter o número do WhatsApp.
                </small>
            </div>
        </div>
    </div>
{% endblock %}